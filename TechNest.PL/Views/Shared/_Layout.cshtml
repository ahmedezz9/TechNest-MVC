                        <a class="nav-link">Register</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link">Sign In</a>
                    </li>
                </ul>
                
            </div>
        </div>
    </nav>
    <!--End NavBar-->
    <!--Header-->
    <header class="vh-100 bg-danger">
        <div id="carouselExampleIndicators" class="carousel slide h-100">            
            <div class="carousel-inner h-100">
                <div class="carousel-item active h-100">
                    <div class="bottom h-100">
                        <div class="layer d-flex justify-content-center align-items-center h-100">
                            <div class="text-center">
                                <h1 class="text-white text-center">Tech Nest</h1>
                                <p class="text-white text-center">Everything you need, one click away</p>
                                <a class="btn btn-primary text-center p-2"><i class="fa-solid fa-phone me-2"></i>Contact Us</a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="carousel-item h-100">
                    <div class="secondbottom h-100">
                        <div class="layer d-flex justify-content-center align-items-center h-100">
                            <div class="text-center">
                                <h1 class="text-white text-center">TechNest</h1>
                                <p class="text-white text-center">Purchase what you need</p>
                                <a class="btn btn-primary text-center p-2"><i class="fa-solid fa-phone me-2"></i>Contact Us</a>
                            </div>
                        </div>
                    </div>

                </div>
                <div class="carousel-item h-100">
                    <div class="thirdbottom h-100">
                        <div class="layer d-flex justify-content-center align-items-center h-100">
                            <div class="text-center">
                                <h1 class="text-white text-center">TechNest</h1>
                                <p class="text-white text-center">Purchase what you need</p>
                                <a class="btn btn-primary text-center p-2"><i class="fa-solid fa-phone me-2"></i>Contact Us</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="carousel-indicators">
                <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
                <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
    </header>
    <!--End Heder-->
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
